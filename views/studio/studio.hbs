<div class="row">
    <div class="col s12 m6">
        <div class="card #424242 grey darken-3 custom-card-wide">
            <div class="card-content custom-card-wide">
                <span class=" card-title">{{video.title}}</span>
                <iframe width="700" height="315" src="https://www.youtube.com/embed/{{video.youtube_video_url}}"
                    title="YouTube video player" frameborder="0" allow="clipboard-write; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
                <p>{{video.description}}</p>
            </div>
            <div class="card-action center">
                <a href="#"><i class="fa-solid fa-pen-to-square white-button"></i></a>
                <a href="#"><i class="fa-solid fa-trash orange-button"></i></a>

            </div>
            <div class="card-action center">
                <a href="#" onclick="openFlash()"><i class="fa-solid fa-circle-plus green-button"></i></a>
                <a href="#"><i class="fa-solid fa-backward"></i></a>
                <a href="#"><i class="fa-solid fa-circle-play"></i></a>
                <a href="#"><i class="fa-solid fa-pause"></i></a>
                <a href="#"><i class="fa-solid fa-forward"></i></a>
            </div>
            <div class="card-action center collapsible-card #757575 grey darken-1" id="myFlashCard">
                <a href="#" onclick="closeFlash()"><i class="fa-solid fa-circle-xmark close-btn"></i></a>
                <br>

                <input placeholder="Task Name" name="task[name]" id="taskName" type="text" class="validate">
                <label for="taskName">Task Name</label>
                <br>
                <div class="input-field col s12">
                    <select>
                        <option value="" disabled selected>Choose your option</option>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                    </select>
                    <label>Materialize Select</label>
                </div>
                <br>
                <input placeholder="Start Time" id="start-time" name="task[start]" type="number">
                <label for="start_time">Start Time</label>
                <input placeholder="End Time" id="end-time" name="task[end]" type="number">
                <label for="end_time">End Time</label>

            </div>
        </div>
    </div>
</div>

