    <script>
        tinymce.init({
        selector: '#body',
        skin: 'naked',
        icons: 'small',
        toolbar_location: 'bottom',
        plugins: 'lists code table codesample link',
        toolbar: 'blocks | fontfamily bold italic underline strikethrough bullist link',
