<div class="row">
    <h1><i class="fa-solid fa-map-location"></i> CREATE PRODUCTION SITE</h1>
    <br>
    <br>
    <br>
            <div id="map" style="height: 450px; width: 600px; border-radius:15px"></div>
    <br>
    <br>

    <form action="/sites/add" method="POST" class="col s12">

        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="site[title]" placeholder="TITLE">
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="autocomplete_search" name="site[address]" placeholder="LOCATION" Autocomplete>
                
                    <input type="hidden" name="site[lat]" id="lat">
                    <input type="hidden" name="site[long]" id="lng">
                    <input type="hidden" name="site[suburb]" id="suburb">
                    <input type="hidden" name="site[state]" id="state">
                    <input type="hidden" name="site[country]" id="country">
                    <input type="hidden" name="site[zipcode]" id="zipcode">

                    
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="contact" name="site[contact]" placeholder="CONTACT">
            </div>
        </div>


        <button type="submit" class="btn green btn-floating btn-large">
            <i class="fa-solid fa-location-pin"></i>
        </button>
        <a href="/" class="btn orange btn-floating btn-large"><i class="fa-solid fa-ban"></i></a>
    </form>
</div>



