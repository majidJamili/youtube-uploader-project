<link rel="stylesheet" href="/styles/map-style.css">

<div class="row">
    <h1><i class="fa-solid fa-map-location"></i> CREATE PRODUCTION SITE</h1>


    <form action="#" method="POST" class="col s12" id="site-form">

        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="site[title]" placeholder="TITLE" required>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="contact" name="site[contact]" placeholder="CONTACT" required>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="autocomplete_search" name="site[address]" placeholder="LOCATION" Autocomplete>
                
                            <div id="map">
                                {{!-- Place to add  append your API iFrame --}}
                            </div>
                    <input type="hidden" name="site[place_google_id]" id="google_id">
                    <input type="hidden" name="site[coordinate]" id="coor">                    
                    
            </div>
        </div>



        <button type="button" class="btn green btn-floating btn-large" style="background-color: #008C45 !important;" onclick="submitSite()">
            <i class="fa-solid fa-location-pin"></i>
        </button>
        <a href="/" class="btn orange btn-floating btn-large" style="background-color: #CD212A !important;"><i class="fa-solid fa-ban"></i></a>
    </form>
</div>


